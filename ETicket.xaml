<Window x:Class="TicketTest.ETicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketTest"
        mc:Ignorable="d"
        Title="ETicket" Height="598" Width="403">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="275*"/>
            <RowDefinition Height="156*"/>
            <RowDefinition Height="151*"/>
        </Grid.RowDefinitions>
        <Image x:Name="barcodeImage" Stretch="Uniform" Margin="77,58,79,55" Grid.Row="1" />
        <Label Content="Payment Successfully Done!" HorizontalAlignment="Left" Margin="42,21,0,0" VerticalAlignment="Top" FontSize="24" Height="42" Width="304"/>
        <Label x:Name="lbName" Content="Name" HorizontalAlignment="Left" Margin="42,86,0,0" VerticalAlignment="Top" FontSize="22" Height="39" Width="68"/>
        <Label x:Name="lbSeat" Content="Seat" HorizontalAlignment="Center" Margin="0,86,0,0" VerticalAlignment="Top" FontSize="22" Height="39" Width="69"/>
        <StackPanel Margin="71,138,73,24"/>
        <Label x:Name="lnItinerary" Content="Train Itinerary" HorizontalAlignment="Left" Margin="42,273,0,0" VerticalAlignment="Top" Grid.RowSpan="2" FontSize="20"/>
    </Grid>
</Window>
